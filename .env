# .env for Flask (Backend)

FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
SQLALCHEMY_DATABASE_URI=sqlite:///your-database.db  # Or your production DB URI
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Optional, for ngrok or deployment
NGROK_URL=http://your-ngrok-url-here
DEBUG=True  # Set to False for production

